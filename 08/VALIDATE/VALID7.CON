;  Test ARMA models
;  This can be very slow!

PROGRESS ON
ALLOWABLE ERROR = 0.0

; The six parameters on the GENERATE ARMA commands are the following weights:
;   AR(1)
;   AR(2)
;   AR(10)
;   MA(1)
;   MA(2)
;   MA(10)

NAME = a , aa
GENERATE = 200 ARMA  -.8 0 0  0 0 0
NAME = b , bb
GENERATE = 200 ARMA  0 0 -.8  0 0 0
NAME = c , cc
GENERATE = 200 ARMA  0 0 0  -.8 0 0
NAME = d , dd
GENERATE = 200 ARMA  0 0 0  0 0 -.8

; Test each individual series

INPUT = a 1
OUTPUT = a
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_anf
ARMA PREDICT = 200 temp  ; This repetition has no practical significance.
ARMA PREDICT = 300 temp  ; It is to check for program bugs only.
DISPLAY = pred_anf
CLEAR ARMA = temp
ARMA FIXED = YES
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_af
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_af
CLEAR ARMA = temp
CLEAR INPUT LIST
CLEAR OUTPUT LIST
ARMA FIXED = NO

INPUT = b 10
OUTPUT = b
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_bnf
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_bnf
CLEAR ARMA = temp
ARMA FIXED = YES
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_bf
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_bf
CLEAR ARMA = temp
CLEAR INPUT LIST
CLEAR OUTPUT LIST
