ARMA FIXED = YES
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_cf
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_cf
CLEAR ARMA = temp
CLEAR INPUT LIST
CLEAR OUTPUT LIST
ARMA FIXED = NO

OUTPUT = d 10
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_dnf
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_dnf
CLEAR ARMA = temp
ARMA FIXED = YES
TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pred_df
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_df
CLEAR ARMA = temp
CLEAR INPUT LIST
CLEAR OUTPUT LIST
ARMA FIXED = NO

; Now do a massive multivariate test

NAME = x
GENERATE = 200 NORMAL ( 100.0 , 1.0 )

INPUT = a 1
INPUT = b 10
INPUT = x 6-7
OUTPUT = a
OUTPUT = b
OUTPUT = c 1
OUTPUT = d 10
OUTPUT = aa
OUTPUT = bb
OUTPUT = cc
OUTPUT = dd
OUTPUT = x 16-17

TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
NAME = pa, pb, pc, pd, paa, pbb, pcc, pdd, px
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pa
DISPLAY = paa
DISPLAY = pb
DISPLAY = pbb
DISPLAY = pc
DISPLAY = pcc
DISPLAY = pd
DISPLAY = pdd
DISPLAY = px
CLEAR ARMA = temp
CLEAR INPUT LIST
CLEAR OUTPUT LIST

;  Finally, repeat the exact same test twice, but with inputs/outputs shuffled
;  Also, save this first version, then restore and test at the end.

INPUT = x 7
OUTPUT = x 16
INPUT = x 6
OUTPUT = d 10
OUTPUT = c 1
INPUT = b 10
OUTPUT = cc
OUTPUT = aa
OUTPUT = b
OUTPUT = x 17
INPUT = a 1
OUTPUT = bb
OUTPUT = dd
OUTPUT = a
OUTPUT = x

TRAIN ARMA = temp
TRAIN ARMA = temp  ; Repeat to test retraining
SAVE ARMA = temp TO temp.wts
NAME = pred_x1           ; x is the first output in the output list
ARMA PREDICT = 200 temp
ARMA PREDICT = 300 temp
DISPLAY = pred_x1
CLEAR ARMA = temp
CLEAR INPUT LIST
CLEAR OUTPUT LIST


OUTPUT = dd
