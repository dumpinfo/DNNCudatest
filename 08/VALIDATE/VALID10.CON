GENERATE = 10001 ARMA 0 0 .9 0 0 0   ; AR(1) lag-10 weight = 0.9
SCALE = 100 x
OFFSET = 100 x

NAME = y
GENERATE = 10001 ARMA 0 0 0 0 0 .9   ; MA(1) lag-10 weight = 0.9
SCALE = 100 y
OFFSET = 100 y

NAME = sum
ADD = x AND y
SCALE = 0.0001 sum
OFFSET = -100 sum

NAME = auto_xa
AUTOCORRELATION = 19 x
DISPLAY = auto_xa

