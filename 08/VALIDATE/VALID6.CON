;  Test cross validation training
;  Test jackknife and bootstrap in EXTENDED TEST.

PROGRESS ON
ALLOWABLE ERROR = 0.01
THRESHOLD = 50
KERNEL = GAUSS
SIGMA LOW = 0.1
SIGMA HIGH = 10.0
SIGMA TRIES = 6
MLFN ERROR TYPE = MEAN SQUARE
MLFN RESTARTS = 2
MLFN PRETRIES = 3
ACCURACY = 5
REFINE = 1
MLFN HID 1 = 2
MLFN HID 2 = 0
MLFN OUTPUT ACTIVATION = LINEAR
MLFN LEARNING METHOD = AN1_LM
ANNEALING INITIALIZATION TEMPERATURES = 5
ANNEALING INITIALIZATION ITERATIONS = 100
ANNEALING INITIALIZATION SETBACK = 100
ANNEALING INITIALIZATION START = 1.0
ANNEALING INITIALIZATION STOP = 0.3
ANNEALING INITIALIZATION RANDOM = GAUSS
ANNEALING INITIALIZATION REDUCTION = EXPONENTIAL
ANNEALING INITIALIZATION ACCEPT = CLIMB

ANNEALING ESCAPE TEMPERATURES = 2
ANNEALING ESCAPE ITERATIONS = 2
ANNEALING ESCAPE SETBACK = 0
ANNEALING ESCAPE START = 2.0
ANNEALING ESCAPE STOP = 0.1
ANNEALING ESCAPE RANDOM = CAUCHY
ANNEALING ESCAPE REDUCTION = EXPONENTIAL
ANNEALING ESCAPE ACCEPT = CLIMB

;  Generate the data

NAME = A1
GENERATE = 35 NORMAL ( 0.0 , 1.0 )
NAME = A2
GENERATE = 35 NORMAL ( 0.0 , 1.0 )
NAME = A3
GENERATE = 35 NORMAL ( 0.0 , 1.0 )
NAME = A4
GENERATE = 35 NORMAL ( 0.0 , 1.0 )
NAME = B1
GENERATE = 35 NORMAL ( 1.0 , 1.0 )
NAME = B2
GENERATE = 35 NORMAL ( 1.0 , 1.0 )
NAME = B3
GENERATE = 35 NORMAL ( 1.0 , 1.0 )
NAME = B4
GENERATE = 35 NORMAL ( 1.0 , 1.0 )

NAME = C1
ADD = A1 AND B1
NAME = C2
ADD = A2 AND B2
NAME = C3
ADD = A3 AND B3
NAME = C4
ADD = A4 AND B4

;  First block of tests is in classification mode
;  Cumulate the training set

INPUT = A1
INPUT = A2
CLASS = class1
CUMULATE TRAINING SET
CLEAR INPUT LIST
INPUT = B1
INPUT = B2
CLASS = class2
CUMULATE TRAINING SET

;  Cumulate the test set

CLEAR INPUT LIST
INPUT = A3
INPUT = A4
CLASS = class1
CUMULATE TEST SET
CLEAR INPUT LIST
INPUT = B3
INPUT = B4
CLASS = class2
CUMULATE TEST SET

;  Test PNN

NETWORK MODEL = PNN
CV TRAIN NETWORK = temp
EXTENDED TEST NETWORK = temp
CLEAR NETWORK = temp

;  Test MLFN

NETWORK MODEL = MLFN
CV TRAIN NETWORK = temp
EXTENDED TEST NETWORK = temp
CLEAR NETWORK = temp

;  CLASSIFICATION mode has been tested.
;  Now use MAPPING.

CLEAR TRAINING SET
CLEAR TEST SET
CLEAR CLASSES
CLEAR INPUT LIST
CLEAR OUTPUT LIST

INPUT = A1
INPUT = A2
OUTPUT = C1
OUTPUT = C2
CUMULATE TRAINING SET
CLEAR INPUT LIST
CLEAR OUTPUT LIST
INPUT = A3
INPUT = A4
OUTPUT = C3
OUTPUT = C4
CUMULATE TEST SET

;  Test the probabilistic family of network models

NETWORK MODEL = PNN
CV TRAIN NETWORK = temp
EXTENDED TEST NETWORK = temp
CLEAR NETWORK = temp

;  Now test MLFN models

NETWORK MODEL = MLFN

CV TRAIN NETWORK = temp
EXTENDED TEST NETWORK = temp
CLEAR NETWORK = temp

;  Now quickly finish up by going back to classification mode.
;  But this time use just one output, as class / reject

CLEAR TRAINING SET
CLEAR TEST SET
CLEAR INPUT LIST
CLEAR OUTPUT LIST
CLEAR CLASSES

;  Cumulate the training set

INPUT = A1
INPUT = A2
CLASS = reject
CUMULATE TRAINING SET
CLEAR INPUT LIST
INPUT = B1
INPUT = B2
CLASS = class
CUMULATE TRAINING SET

CLEAR INPUT LIST
INPUT = A3
INPUT = A4
CLASS = reject
CUMULATE TEST SET
CLEAR INPUT LIST
INPUT = B3
INPUT = B4
CLASS = class
CUMULATE TEST SET

CV TRAIN NETWORK = temp
EXTENDED TEST NETWORK = temp
CLEAR NETWORK = temp

